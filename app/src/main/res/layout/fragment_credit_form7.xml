<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".form.CreditFormFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background1"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_backbtn"
            android:padding="20dp"
            android:src="@drawable/ic_backarrow" />

        <TextView
            android:id="@+id/txtPageTitle2"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="20dp"
            android:text="Créditos"
            android:textAlignment="center"
            android:textColor="@color/header"
            android:textSize="28dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background1"
            android:gravity="center"
            android:padding="9dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Información complementaria"
                    android:textColor="@color/titletextColor"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="barra de progreso xd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.003"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"></TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ............................................ -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">


                <TextView
                    android:id="@+id/tv_pregunta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Pregunta 1"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ident"
                    tools:layout_editor_absoluteX="9dp">

                    <RadioButton
                        android:id="@+id/rb_linea1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:fontFamily="@font/poppins"
                        android:text="Uno"
                        android:textSize="16sp"></RadioButton>

                    <RadioButton
                        android:id="@+id/rb_linea2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Dos"
                        android:textSize="16sp"></RadioButton>
                </RadioGroup>

            </LinearLayout>

            <!-- ............................................ -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">


                <TextView
                    android:id="@+id/tv_pregunta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Pregunta 2"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RadioGroup
                    android:id="@+id/radiogroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ident"
                    tools:layout_editor_absoluteX="9dp">

                    <RadioButton
                        android:id="@+id/rb_linea12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:fontFamily="@font/poppins"
                        android:text="Uno"
                        android:textSize="16sp"></RadioButton>

                    <RadioButton
                        android:id="@+id/rb_linea22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Dos"
                        android:textSize="16sp"></RadioButton>
                </RadioGroup>

            </LinearLayout>

            <!-- ............................................ -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">


                <TextView
                    android:id="@+id/tv_pregunta3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Pregunta 3"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RadioGroup
                    android:id="@+id/radiogroup3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ident"
                    tools:layout_editor_absoluteX="9dp">

                    <RadioButton
                        android:id="@+id/rb_linea13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:fontFamily="@font/poppins"
                        android:text="Uno"
                        android:textSize="16sp"></RadioButton>

                    <RadioButton
                        android:id="@+id/rb_linea23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Dos"
                        android:textSize="16sp"></RadioButton>
                </RadioGroup>

            </LinearLayout>

            <!-- ............................................ -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">


                <TextView
                    android:id="@+id/tv_pregunta4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Pregunta 4"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RadioGroup
                    android:id="@+id/radiogroup4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ident"
                    tools:layout_editor_absoluteX="9dp">

                    <RadioButton
                        android:id="@+id/rb_linea14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:fontFamily="@font/poppins"
                        android:text="Uno"
                        android:textSize="16sp"></RadioButton>

                    <RadioButton
                        android:id="@+id/rb_linea24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Dos"
                        android:textSize="16sp"></RadioButton>
                </RadioGroup>

            </LinearLayout>

            <!-- ............................................ -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pregunta5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Pregunta 5"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="20dp"
                    android:text="Nombre y apellidos"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="9dp"
                    android:layout_marginTop="20dp"
                    android:hint="Nombre y apelldios"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="9dp"></EditText>

                <TextView
                    android:id="@+id/tv_registro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="20dp"
                    android:text="Registro"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_registro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="9dp"
                    android:layout_marginTop="20dp"
                    android:hint="NNumero de registro"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="9dp"></EditText>
            </LinearLayout>

            <!-- ............................................ -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">


                <TextView
                    android:id="@+id/tv_pregunta6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Pregunta 6"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RadioGroup
                    android:id="@+id/radiogroup6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ident"
                    tools:layout_editor_absoluteX="9dp">

                    <RadioButton
                        android:id="@+id/rb_linea16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:fontFamily="@font/poppins"
                        android:text="Uno"
                        android:textSize="16sp"></RadioButton>

                    <RadioButton
                        android:id="@+id/rb_linea26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Dos"
                        android:textSize="16sp"></RadioButton>
                </RadioGroup>

            </LinearLayout>

            <!-- ............................................ -->

            <!-- ............................................ -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">


                <TextView
                    android:id="@+id/tv_pregunta7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Pregunta 7"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_operaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="9dp"
                android:layout_marginTop="20dp"
                android:hint="Operaciones con moneda extrangera"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="9dp"></EditText>


            <!-- ............................................ -->




            <Button
                android:id="@+id/btn_siguiente"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:background="@drawable/btn_siguiente"
                android:elevation="0dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Finalizar"
                android:textAllCaps="false"
                android:textColor="@color/btnTextColor"
                android:textSize="18sp"></Button>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>