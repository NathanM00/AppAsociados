<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:background="@color/background1"
    tools:context=".BeneficeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_backbtn"
            android:padding="20dp"
            android:src="@drawable/ic_backarrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtPageTitle2"
            android:layout_width="181dp"
            android:layout_height="36dp"
            android:text="Beneficios"
            android:textAlignment="center"
            android:textColor="@color/header"
            android:textSize="28dp"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.652" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout
        android:id="@+id/btn_grid"
        android:layout_width="match_parent"
        android:layout_height="850dp"
        android:layout_below="@+id/header"
        android:layout_marginTop="88dp"
        android:columnCount="2"
        android:rowCount="5"
        android:background="@color/background1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:padding="9dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_creditos"
            android:layout_width="90dp"
            android:layout_height="10dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="9dp"
            app:cardBackgroundColor="@color/btnWhiteBg"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:paddingTop="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/creditosicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:text="@string/txt_btn_credit"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/beneftbtnTextColor"
                    android:textSize="17sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="9dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/btnWhiteBg"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:paddingTop="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/cuenta" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_btn_cuenta"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/beneftbtnTextColor"
                    android:textSize="17sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_comiteSocial"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="9dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/btnWhiteBg"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:paddingTop="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/convenios" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bienestar Social"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/beneftbtnTextColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="9dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/btnWhiteBg"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:paddingTop="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/pagos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_btn_pagos"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/beneftbtnTextColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="9dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/btnWhiteBg"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:paddingTop="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/pasadias" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_btn_pasadias"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/beneftbtnTextColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="9dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/btnWhiteBg"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:paddingTop="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/premios" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_btn_premios"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/beneftbtnTextColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_tueliges"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="9dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/btnWhiteBg"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:paddingTop="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/tueliges" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_btn_tueliges"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/beneftbtnTextColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_ahorroVoluntario"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="9dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/btnWhiteBg"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:paddingTop="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ahorro" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ahorro Voluntario"
                    android:textAlignment="center"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/beneftbtnTextColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_comiteSolidaridad"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="9dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/btnWhiteBg"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:paddingTop="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ahorro" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solidaridad"
                    android:textAlignment="center"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/beneftbtnTextColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>