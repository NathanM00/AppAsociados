<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".form.CreditFormFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background1"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_backbtn"
            android:padding="20dp"
            android:src="@drawable/ic_backarrow" />

        <TextView
            android:id="@+id/txtPageTitle2"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="20dp"
            android:text="Créditos"
            android:textAlignment="center"
            android:textColor="@color/header"
            android:textSize="28dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background1"
            android:gravity="center"
            android:padding="9dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Información financiera"
                    android:textColor="@color/titletextColor"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="barra de progreso xd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.003"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"></TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/tv_sec1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Referente familiar"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/titletextColor"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_salario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Nombre completo"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_familiar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="9dp"
                android:layout_marginTop="20dp"
                android:hint="Nombre y apellido"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/radiogroup"
                tools:layout_editor_absoluteX="9dp"></EditText>

            <!-- ............................................ -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Direccion de residencia"
                        android:textColor="@color/titletextColor"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/et_dir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="9dp"
                        android:layout_marginTop="20dp"
                        android:hint="Direccion"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/radiogroup"
                        tools:layout_editor_absoluteX="9dp"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ciudad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Ciudad"
                        android:textColor="@color/titletextColor"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/et_ciudad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="9dp"
                        android:layout_marginTop="20dp"
                        android:hint="Ciudad"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/radiogroup"
                        tools:layout_editor_absoluteX="9dp"></EditText>

                </LinearLayout>

            </LinearLayout>

            <!-- ............................................ -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Telefono"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="9dp"
                android:layout_marginTop="20dp"
                android:hint="$0"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/radiogroup"
                tools:layout_editor_absoluteX="9dp"></EditText>

            <!-- ..................Aacaba rferente.......................... -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/tv_sec2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Refrente personal"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/titletextColor"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_nom2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Nombre y apellido"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_nom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="9dp"
                android:layout_marginTop="20dp"
                android:hint="$0"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/radiogroup"
                tools:layout_editor_absoluteX="9dp"></EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dir2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Direccion de residencia"
                        android:textColor="@color/titletextColor"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/et_dir2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="9dp"
                        android:layout_marginTop="20dp"
                        android:hint="Direccion"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/radiogroup"
                        tools:layout_editor_absoluteX="9dp"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ciudad2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Ciudad"
                        android:textColor="@color/titletextColor"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/et_ciudad2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="9dp"
                        android:layout_marginTop="20dp"
                        android:hint="Ciudad"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/radiogroup"
                        tools:layout_editor_absoluteX="9dp"></EditText>

                </LinearLayout>

            </LinearLayout>

            <!-- ............................................ -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/tv_tel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Telefono"
                    android:textColor="@color/titletextColor"
                    android:textSize="18sp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_tel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="9dp"
                android:layout_marginTop="20dp"
                android:hint="$0"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/radiogroup"
                tools:layout_editor_absoluteX="9dp"></EditText>

            <!-- ..................Aacaba rferente personal.......................... -->


            <Button
                android:id="@+id/btn_siguiente"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:background="@drawable/btn_siguiente"
                android:elevation="0dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/txt_btn_sgte"
                android:textAllCaps="false"
                android:textColor="@color/btnTextColor"
                android:textSize="18sp"></Button>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>